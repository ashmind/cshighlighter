@{
    ViewBag.Title = "Example";
}
@model TestWebsite.Models.CodeModel

<style type="text/css">
    .formattedCode {
        font-family: "Consolas", "Courier New", "Andale Mono", "Lucida Console", monospace;
        font-size: 12pt;
        line-height: 125%;
        white-space: pre;
    }

    .comment {
        color: green;
    }

    .keyword {
        color: blue;
    }

    .stringLiteral {
        color: darkred;
    }

    .numericLiteral {
        color: magenta;
    }

    .identifier {
        color: #2B91AF;
    }

    .region {
        color: lightgray;
    }

    .localDecl {
        color: black;
    }

    .localRef {
        color: black;
    }

    .fieldDecl {
        color: black;
    }

    .fieldRef {
        color: black;
    }

    .paramDecl {
        color: black;
    }

    .paramRef {
        color: black;
    }

    .propDecl {
        color: black;
    }

    .propRef {
        color: black;
    }
    
    .methodRef {
        color: black;
    }
    
    .methodDecl {
        color: black;
    }
</style>

<style type="text/css">
    @Html.Raw(Model.HoverCssClasses)
</style>

<div id="formattedCode" class="formattedCode">@Html.Raw(Model.CodeElements)</div>